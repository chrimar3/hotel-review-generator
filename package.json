{
  "name": "hotel-guest-communication-system",
  "version": "2.0.0",
  "description": "Professional hotel guest communication management system for authentic feedback collection and service improvement",
  "main": "index.html",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "serve": "python3 -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ *.html --ext .js,.html",
    "lint:sarif": "eslint src/ *.html --ext .js,.html -f @microsoft/eslint-formatter-sarif -o eslint-results.sarif",
    "lint:fix": "eslint src/ *.html --ext .js,.html --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.html\" \"*.md\"",
    "validate": "npm run lint && npm run test && npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --view --preset=perf --form-factor=mobile",
    "a11y": "pa11y http://localhost:3000",
    "deploy:netlify": "netlify deploy --prod --dir dist",
    "deploy:vercel": "vercel --prod",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:prod": "npm run test && npm run test:integration",
    "performance:audit": "node scripts/performance-monitor.js audit",
    "performance:monitor": "node scripts/performance-monitor.js monitor",
    "load:test": "k6 run tests/load/hotel-system-load-test.js",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "hotel",
    "guest-feedback",
    "communication",
    "hospitality",
    "crm",
    "pms",
    "mobile",
    "pwa",
    "javascript",
    "gdpr-compliant",
    "analytics",
    "modular"
  ],
  "author": "Hotel Communication Systems Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrimar3/hotel-guest-communication-system.git"
  },
  "bugs": {
    "url": "https://github.com/chrimar3/hotel-guest-communication-system/issues"
  },
  "homepage": "https://github.com/chrimar3/hotel-guest-communication-system#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "babel-jest": "^29.7.0",
    "chrome-launcher": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "k6": "^0.0.0",
    "lighthouse": "^12.8.1",
    "lint-staged": "^15.2.0",
    "pa11y": "^8.0.0",
    "prettier": "^3.1.0",
    "terser": "^5.24.0",
    "vite": "^7.1.1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "iOS >= 12",
    "Safari >= 12"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "__DEV__": true
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "index.html",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    }
  }
}
